<?xml version="1.0"?>
<config>
	<sections>
        <vc_giftwrap translate="label" module="vc_giftwrap">
            <label>Gift Wrap Settings</label>
			<tab>vc_all</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        	<groups>
        		<general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<enable translate="label">
							<label>Enable</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</enable>
						
						<image_folder translate="label">
							<label>Gift Folder</label>
                            <frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Where to save image (eg: {magento_root}/media/{your folder name}).]]></comment>
						</image_folder>	
						
						<image_extension_allow translate="label">
							<label>Allow Image's Extensions</label>
                            <frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Extension : .gif, .jpg.]]></comment>							
						</image_extension_allow>	
						
						
						<image_width translate="label">
							<label>Image's Width</label>
                            <frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Image's width that you allowed to upload.]]></comment>
						</image_width>	

						<image_height translate="label">
							<label>Image's Height</label>
                            <frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Image's height that you allowed to upload.]]></comment>
						</image_height>	
						
												
                   	</fields>
	            </general>
				
				<card>
                    <label>Card Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<max_character_default translate="label">
							<label>Max Character Default</label>
                            <frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[]]></comment>
						</max_character_default>
					</fields>
				</card>
				
				<pdf>
                    <label>Pdf Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
                    <fields>
						<image_extension_allow translate="label">
							<label>Allow Image's Extensions</label>
                            <frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment><![CDATA[Extension : .tif, .tiff, .png, .jpg, .jpe, .jpeg.]]></comment>							
						</image_extension_allow>	
					</fields>
				
				</pdf>
			</groups>
		</vc_giftwrap>
	</sections>			
</config>